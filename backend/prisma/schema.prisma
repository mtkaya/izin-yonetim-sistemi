generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Birim {
  id        Int        @id @default(autoincrement())
  ad        String
  aktif     Boolean    @default(true)
  personeller Personel[]

  @@map("birimler")
}

model Personel {
  id                    Int          @id @default(autoincrement())
  sicilNo               String       @unique @map("sicil_no")
  ad                    String
  soyad                 String
  telefon               String?
  birimId               Int?         @map("birim_id")
  birim                 Birim?       @relation(fields: [birimId], references: [id])
  hakTarih              DateTime?    @map("hak_tarih")
  hizmetSuresi          Int?         @map("hizmet_suresi")
  puantor               String?
  goreveBaslamaTarihi   DateTime?    @map("goreve_baslama_tarihi")
  aktif                 Boolean      @default(true)
  createdAt             DateTime     @default(now()) @map("created_at")
  updatedAt             DateTime     @updatedAt @map("updated_at")
  izinKayitlari         IzinKaydi[]
  mesaiKayitlari        MesaiKaydi[]

  @@map("personeller")
}

model IzinTuru {
  id        Int          @id @default(autoincrement())
  ad        String
  maxGun    Int?         @map("max_gun")
  ucretli   Boolean      @default(true)
  aktif     Boolean      @default(true)
  izinKayitlari IzinKaydi[]

  @@map("izin_turleri")
}

model IzinKaydi {
  id               Int       @id @default(autoincrement())
  personelId       Int       @map("personel_id")
  personel         Personel  @relation(fields: [personelId], references: [id])
  izinTuruId       Int       @map("izin_turu_id")
  izinTuru         IzinTuru  @relation(fields: [izinTuruId], references: [id])
  baslangicTarihi  DateTime  @map("baslangic_tarihi")
  bitisTarihi      DateTime  @map("bitis_tarihi")
  gunSayisi        Decimal   @map("gun_sayisi")
  aciklama         String?
  kayitTarihi      DateTime  @default(now()) @map("kayit_tarihi")
  createdAt        DateTime  @default(now()) @map("created_at")

  @@map("izin_kayitlari")
}

model MesaiNedeni {
  id             Int          @id @default(autoincrement())
  ad             String       @unique
  aktif          Boolean      @default(true)
  mesaiKayitlari MesaiKaydi[]

  @@map("mesai_nedenleri")
}

model MesaiKaydi {
  id            Int         @id @default(autoincrement())
  personelId    Int         @map("personel_id")
  personel      Personel    @relation(fields: [personelId], references: [id])
  mesaiNedeniId Int         @map("mesai_nedeni_id")
  mesaiNedeni   MesaiNedeni @relation(fields: [mesaiNedeniId], references: [id])
  tarih         DateTime
  saat          Decimal     @default(0)
  aciklama      String?
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")

  @@map("mesai_kayitlari")
}

model ResmiTatil {
  id        Int      @id @default(autoincrement())
  ad        String
  tarih     DateTime
  gunSayisi Decimal  @default(1) @map("gun_sayisi")

  @@map("resmi_tatiller")
}
